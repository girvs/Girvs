    "UseRowNumberForPaging": true,
    //启用以会话状态存储TempData
    "UseSessionStateTempDataProvider": false,
    "DataConnectionString": "Data Source=192.168.1.199;Database=scs_test2020122801;User ID=root;Password=123456;pooling=true;CharSet=utf8;port=3306;sslMode=None;",
