  "ConsulConfig": {
    //服务运行的模式 0 代表 GRPC 1代表ResultFulApi
    "RunMode": 1,
    //要注册的服务名称
    "ServerName": "",
    //consul服务地址
    "ConsulAddress": "http://localhost:8500",
    //健康检查地址
    "HealthAddress": "http://localhost:6001/Health",
    //健康检查时间间隔
    "Interval": 5,
    //服务启动多久后注册
    "DeregisterCriticalServiceAfter": 10,
    //超时时间
    "Timeout": 10,
    //注册入Consul的回访地址，和实际运行地址不同，因为要考虑服务的负载均衡
